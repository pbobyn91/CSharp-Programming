@using Microsoft.AspNetCore.Http
@{
    Layout = "_Layout";
}

<div style="padding-bottom:9px; margin: 40px 0 20px; border-bottom: 1px solid #eee; box-sizing: border-box">
    <h3>Edit Blog Post</h3>
</div>

@using (Html.BeginForm("EditBlog", "Home"))
{
<fieldset>
    <div class="form-group">
        <label for="Title">Title: </label>
        <input class="form-control" type="text" data-val="true" data-val-length="200" data-val-length-max="200" id="Title" name="Title" value="@Model.Title" required />
    </div>
    <div class="form-group">
        <label for="Content">Content:</label><br />
        <textarea class="form-control" type="text" data-val="true" data-val-length-max="4000" id="Content" name="Content" required>
                @Model.Content
            </textarea>
    </div>
    <input type="hidden" id="UserId" name="UserId" value="@Context.Session.GetInt32("_userId")" />
    <input type="hidden" ud="Posted" name="Posted" value="@DateTime.Now" />
    <input type="hidden" id="BlogPostId" name="BlogPostId" value="@Model.BlogPostId" />
    <input type="submit" value="Edit Blog Post" class="btn btn-outline-dark" />
</fieldset>
}