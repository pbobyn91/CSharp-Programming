@model Assignment1.Models.User
@{
    Layout = "_Layout";
    ViewData["Title"] = "Registration";
}

<div style="padding-bottom:9px; margin: 40px 0 20px; border-bottom: 1px solid #eee; box-sizing: border-box">
    <h3>Registration</h3>
</div>

@using (Html.BeginForm("RegisterUser", "Home"))
{
<fieldset>
    <div class="form-group">
        <label for="Title">First Name</label>
        <input class="form-control" type="text" data-val="true" data-val-length="50" data-val-length-max="50" data-val-required="First Name is Required." id="FirstName" name="FirstName" value="" required/>
    </div>
    <div class="form-group">
        <label for="Title">Last Name</label>
        <input class="form-control" type="text" data-val="true" data-val-length="50" data-val-length-max="50" data-val-required="Last Name is Required." id="LastName" name="LastName" value="" required/>
    </div>
    <div class="form-group">
        <label for="Title">Email Address</label>
        <input class="form-control" type="email" data-val="true" data-val-length="50" data-val-length-max="50" data-val-required="Email is Required." id="EmailAddress" name="EmailAddress" value="" required/>
    </div>
    <div class="form-group">
        <label for="Title">Password</label>
        <input class="form-control" type="password" data-val="true" data-val-length="50" data-val-length-max="50" data-val-required="Password is Required." id="Password" name="Password" value="" required/>
    </div>
    <p style="">Role:  </p>
    <div class="form-row">
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="RoleId" id="userRadio" value="1" checked>
            <label class="form-check-label" for="userRadio">General Users</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="RoleId" id="adminRadio" value="2">
            <label class="form-check-label" for="adminRadio">Admin</label>
        </div>
    </div>
    <br/>
    <input type="submit" value="Register" class="btn btn-outline-dark" />
</fieldset>
}